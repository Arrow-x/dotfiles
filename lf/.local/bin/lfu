#!/bin/sh

set -e

UB_PID=0
UB_SOCKET=""

cleanup() {
	exec 3>&-
	ueberzugpp cmd -s "$UB_SOCKET" -a exit
}

if [ -n "$SSH_CLIENT" ] || [ -n "$SSH_TTY" ]; then
	lf "$@"
else
	[ ! -d "$HOME/.cache/lf" ] && mkdir --parents "$HOME/.cache/lf"
	UB_PID_FILE="/tmp/.$(uuidgen)"

	case "$TERM" in
		"foot") ueberzugpp layer --no-cache --no-stdin --silent --output sixel --pid-file "$UB_PID_FILE" ;;
		"xterm-kitty") ueberzugpp layer --no-cache --no-stdin --silent --output kitty --pid-file "$UB_PID_FILE" ;;
		"tmux-256color")
			if [ "$XDG_SESSION_TYPE" = "wayland" ]; then
				ueberzugpp layer --no-cache --no-stdin --silent --output wlroots --pid-file "$UB_PID_FILE"
			else
				ueberzugpp layer --no-cache --no-stdin --silent --output x11 --pid-file "$UB_PID_FILE"
			fi
			;;
		*) ueberzugpp layer --no-cache --no-stdin --silent --use-escape-codes --pid-file "$UB_PID_FILE" ;;
	esac
	UB_PID=$(cat "$UB_PID_FILE")
	rm "$UB_PID_FILE"
	UB_SOCKET="/tmp/ueberzugpp-${UB_PID}.socket"
	export UB_PID UB_SOCKET
	trap cleanup HUP INT QUIT TERM PWR EXIT
	lf "$@" 3>&-
fi
