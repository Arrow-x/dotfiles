# Basic Settings
set hidden true
set ignorecase true
set icons true

# Custom Functions
cmd mkdir ${{
  printf "Directory Name: "
  read ans
  mkdir $ans
}}

cmd mkfile ${{
  printf "File Name: "
  read ans
  $EDITOR $ans
}}

cmd setwallpaper ${{nitrogen --set-zoom-fill "$f"}}

# Archive bindings
cmd unarchive ${{
  7z x "$f"
#  case "$f" in
#      *.zip) unzip "$f" ;;
#      *.tar.gz) tar -xzvf "$f" ;;
#      *.tar.bz2) tar -xjvf "$f" ;;
#      *.tar) tar -xvf "$f" ;;
#      *) echo "Unsupported format" ;;
#  esac
}}

cmd copen ${{
    case "$f" in
      *.sh) (sh "$f" &);;
      *) mimeo "$f";;
    esac
}}

# Execute exe
cmd execute ${{
	wine "$f"
}}

# Trash bindings
cmd trash ${{
  files=$(printf "$fx" | tr '\n' ';')
  while [ "$files" ]; do
    file=${files%%;*}

    trash-put "$(basename "$file")"
    if [ "$files" = "$file" ]; then
      files=''
    else
      files="${files#*;}"
    fi
  done
}}

cmd restore_trash ${{
  trash-restore
}}

# Bindings
# Remove some defaults
map m
map o
map n
map "'"
map '"'
map d

map au unarchive
map ae execute

# Basic Functions
map . set hidden!
map DD delete
map p paste
map x cut
map y copy
map <enter> copen
map R reload
map mf mkfile
map md mkdir
map bg setwallpaper
map C clear

map dd trash
map dr restore_trash

# Movement
map gD cd ~/File/Documents
map gd cd ~/Downloads
map gp cd ~/Pictures
map gc cd ~/.config

set previewer ~/.config/lf/previewer.sh
set cleaner ~/.config/lf/clear_img.sh
