{
    "layer": "top",
    "position": "top",
    "mod": "dock",
    "exclusive": true,
    "passtrough": false,
    "gtk-layer-shell": true,
    "modules-left": [
        "sway/workspaces"
    ],
    "modules-center": [],
    "modules-right": [
        "cpu",
        "temperature",
        "memory",
        "custom/bandwidth",
        "battery",
        "pulseaudio",
        "custom/dunst",
        "clock",
        "tray",
        "custom/power"
    ],

    "hyprland/window": {
        "format": "{}"
    },
    "sway/workspaces": {
        "all-outputs": true,
        "on-click": "activate",
        "format": "{icon}",
        "format-icons": {
            "9": "9:",
            "10": "10:"
          }
    },
    "tray": {
        "icon-size": 19,
        "tooltip": false,
        "spacing": 10
    },
    "clock": {
        "format": "{: %R   %A-%d-%B(%m)-%g}",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>"
    },
    "pulseaudio": {
        "format": "{icon} {volume}%",
        "tooltip": false,
        "format-muted": " Muted",
        "on-click": "pavucontrol",
        "on-scroll-up": "amixer -D pulse sset Master 5%+",
        "on-scroll-down": "amixer -D pulse sset Master 5%-",
        "scroll-step": 5,
        "format-icons": {
            "headphone": "",
            "hands-free": "",
            "headset": "",
            "phone": "",
            "portable": "",
            "car": "",
            "default": ["", "", ""]
        }
    },
    "network": {
        "format-icons": "",
        "format": "{icon} {bandwidthDownBytes} - {bandwidthUpBytes}",
        "interface": "wlan0",
        "interval": 1
    },
    "memory": {
        "interval": 1,
        "format-icons": "",
        "format": "{icon} {percentage}%"
    },
    "cpu": {
        "interval": 1,
        "format-icons": "",
        "format": "{icon} {load}%"
    },
    "temperature": {
        "format-icons":"",
        "format": "{icon} {temperatureC}°C"
    },
    "battery": {
        "interval": 60,
        "states": {
            "warning": 30,
            "critical": 15
        },
        "format": "{icon} {capacity}%",
        "format-icons": ""
    },
    "custom/power":{
        "on-click": "~/.config/waybar/scripts/power-menu.sh",
        "format-icons": "",
        "format": " {icon} "

    },
    "custom/bandwidth":{
        "format-icons": "",
        "format":"{icon}{}",
        "exec":"$HOME/.config/waybar/scripts/bandwidthc"
    },
    "custom/dunst":{
        "format":"{}",
        "interval":"once",
        "exec-on-event": true,
        "exec":"$HOME/.config/waybar/scripts/dunst",
        "on-click":"dunstctl set-paused toggle",
        "on-click-right":"dunstctl history-pop"
    },
    "custom/cmus": {
        "format": "♪ {}",
        //"max-length": 15,
        "interval": 10,
        "exec": "cmus-remote -C \"format_print '%a - %t'\"", // artist - title
        "exec-if": "pgrep cmus",
        "on-click": "cmus-remote -u",                        //toggle pause
        "escape": true                                       //handle markup entities
    }
}
