#!/bin/sh

terminal="footclient -D"
term_editor="footclient nvim"
editor="nvim"

menu() {
	# [ -n "$(pgrep bemenu)" ] && exit
	# bemenu -l 20 -p Projects:
	fzfmenu.sh
}
print_help() {
	echo "-n   | --neovim"
	echo "-N   | --neovide"
	echo "-c   | --change-dir"
	echo "-lc  | --local-configs"
	echo "-Lc  | --Local-configs-dir"
	echo "-ip  | --editor-in-this-ternminal-projects"
	echo "-ic  | --editor-in-this-ternminal-configs"
	echo "-ipc | --echo-in-this-ternminal-projects"
	echo "-icc | --echo-in-this-ternminal-configs"
}

proj_search() {
	search="$(find -L "/home/arrowx/Sources" "/home/arrowx/File/Projects/Godot" "/home/arrowx/File/Projects/Scripts" -mindepth 1 -maxdepth 1 -type d | menu)"
	printf "%s" "$search"
}

configs() {
	search="$(find -L "/home/arrowx/.config" -mindepth 1 -maxdepth 1 -type d | menu)"
	printf "%s" "$search"
}

case "$1" in
	-h | --help)
		print_help
		;;
	-n | --neovim)
		search="$(proj_search)"
		[ -z "$search" ] && exit
		$terminal "$search" "$editor" .
		;;
	-N | --neovide)
		search="$(proj_search)"
		[ -z "$search" ] && exit
		cd "$search" || exit
		neovide . &
		;;
	-c | --change-dir)
		search="$(proj_search)"
		[ -z "$search" ] && exit
		$terminal "$search" &
		;;
	-lc | --local-configs)
		search="$(configs)"
		[ -z "$search" ] && exit
		$term_editor "$search" &
		;;
	-Lc | --Local-configs-dir)
		search="$(configs)"
		[ -z "$search" ] && exit
		$terminal "$search" &
		;;
	*) exit ;;
esac
