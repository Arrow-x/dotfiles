#!/bin/sh
if [ "$#" -ne 1 ]; then
	echo "Too Little Arguments! chose either to type the chararcters with -t or open in a browser with -b" >&2
	exit 1
fi

menu() {
	# dmenu -l 16
	fzfmenu.sh
}
browser() {
	# chromium "$1"
	# firefox "$1"
	brave "$1"
}
case $1 in
-t | --type) xdotool type --delay 0ms "$(grep -v "^#" $HOME/Notes-And-Tasks/bookmarks | menu | cut -d ' ' -f1)" ;;
-b | --browser)
	bookmark=$(grep -v "^#" $HOME/Notes-And-Tasks/bookmarks | menu | cut -d ' ' -f1)
	if [ -z "$bookmark" ]; then
		exit 1
	fi
	browser "$bookmark" &
	;;
*)
	echo "Wrong argument expect either -t or -b" >&2
	exit 1
	;;
esac
