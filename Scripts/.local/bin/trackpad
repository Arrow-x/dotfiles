#!/bin/sh
toggle=/tmp/toggle_touchpad.tmp

if [ ! -e "$toggle" ]; then
	touch "$toggle"
	case "$XDG_SESSION_TYPE" in
		"wayland") swaymsg input type:touchpad events disabled ;;
		*) xinput disable SynPS/2\ Synaptics\ TouchPad ;;
	esac
	notify-send -u low -i mouse \
		--icon=/usr/share/icons/HighContrast/256x256/status/touchpad-disabled.png \
		"Trackpad disabled"
else
	rm "$toggle"
	case "$XDG_SESSION_TYPE" in
		"wayland") swaymsg input type:touchpad events enabled ;;
		*) xinput enable SynPS/2\ Synaptics\ TouchPad ;;
	esac
	notify-send -u low -i mouse \
		--icon=/usr/share/icons/HighContrast/256x256/devices/input-touchpad.png \
		"Trackpad enabled"
fi
