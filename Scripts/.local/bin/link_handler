#!/bin/sh

help="this is the help text"
case "$1" in
	-h | --help | '')
		printf "%s\n" "$help"
		exit 0
		;;
	*)
		url="$1"
		;;
esac

y_tube() {
	mpv --ytdl-format="$1" --really-quiet --no-terminal "$2"
}

d_failed() {
	notify-send -u low -i /usr/share/icons/Qogir/32/status/dialog-error.svg \
		"Failed to open"
	exit 1
}
retry() {
	notify-send -u low -i /usr/share/icons/Qogir/32/status/system-reboot.svg \
		"Retrying link.."
}

get_link() {
	gallery-dl -q -g "$1"
}

manage_url() {
	notify-send -u low -i /usr/share/icons/Qogir/32/status/system-save-session.svg \
		"opening the $1 at $2"

	case "$1" in
		"Video")
			! y_tube "" "$2" && d_failed
			;;

		"Youtube")
			! yt_format_parser "$2" && d_failed
			;;

		"Audio")
			! mpv --really-quiet --no-terminal --force-window "$2" && d_failed
			;;

		"Picture")
			! nsxiv-url $2 && d_failed
			;;

		"X")
			link="$(get_link "$2")"
			[ -z "$link" ] && d_failed
			if echo "$link" | grep video; then
				! mpv "$link" && d_failed
			else
				! nsxiv-url "$(echo "$link" | grep orig)" && d_failed
			fi
			;;

		"Tumblr")
			_link="$(get_link "$2")"
			! manage_url "$(parse_url "$_link")" "$_link" && d_failed
			;;

		"Read")
			! gallery-dl -q --exec-after "setsid -f $IMAGE {_directory}" "$2" && d_failed
			;;

		"Fic")
			! "$TERMINAL" sh -c "fichub_cli -o /home/arrowx/Documents --force -u \"$2\"" >/dev/null && d_failed
			;;

		"General")
			! "$BROWSER" "$2" && d_failed
			;;

	esac
}

parse_url() {
	case "$1" in
		*.mkv | \
			*.mp4 | \
			*'twitch'* | \
			*.webm)
			printf "Video"
			;;

		*'youtube.com/watch'* | \
			*'youtube.com/playlist'* | \
			*'youtube.com/shorts'* | \
			*'youtu.be'*)
			printf "Youtube"
			;;

		*.mp3 | \
			*.ogg | \
			*.flac | \
			*.opus)
			printf "Audio"
			;;

		*'twitter.com'* | \
			*'x.com'*)
			printf "X"
			;;

		*.png* | \
			*.jpg* | \
			*.jpeg* | \
			*.gif* | \
			*.webp*)
			printf "Picture"
			;;

		*'tumblr'*)
			printf "Tumblr"
			;;

		*'hentai'* | \
			*'mangasee'*)
			printf "Read"
			;;

		*'spacebattles'* | *'alternatehistory'*)
			printf "Fic"
			;;

		*)
			printf "General"
			;;
	esac
}
manage_url "$(parse_url "$url")" "$url"
