#!/bin/sh
#TODO: change the menu from a argument or config file
#TODO: make this work with xdotools as well

if [ -n "$(pgrep bemenu)" ]; then
	exit
fi

key="$(find "$XDG_DATA_HOME"/pass -type f | sed "s#$XDG_DATA_HOME/pass/##;s/.gpg//" | $MENU -p "PASS: " -l 16)"
if [ -z "$key" ]; then
	exit
fi
password="$(pass show "$key")"
passw() {
	wtype "$(printf %s "$password" | awk 'NR%2')"
}
login() {
	login="$(printf %s "$password" | grep login | sed "s/login\: //")"
	if [ -z "$login" ]; then
		login="$(echo "$key" | awk -F "/" '{print $2}')"
	fi
	wtype "$login"
}
case "$1" in
	-p | --pass)
		passw ;;
	-l | --login)
		login ;;
	-bt | --both-tab)
		login
		wtype -P tab
		passw ;;
	-be | --both-enter)
		login
		wtype -P return
		sleep 3
		passw ;;
esac
key=""
password=""
